<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Archive - Home</title>
    <style>
        table, th, td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
	<table>
		<tr>
			<th colspan="2"> Logado como</th>
		</tr>
		<tr>
			<th> <%= usuario.email %> </th>
			<th> <button onclick="window.location.href = 'sair'"> sair </button> </th>
		</tr>
	</table>
	<br>

	<table>
		<tr>
			<th colspan="3"> Novo arquivo </th>
		</tr>
		<tr>
			<form action="home/upload" method="post" enctype="multipart/form-data">
				<td> Upload </td>
				<td>
				 	<input type="file" name="arquivo" value="upload" required accept=".c"/>
					<input type="submit" value="Enviar">
				</td>
			</form>
		</tr>

		<tr>
			<form action="home/novo" method="post">
				<td> Criar </td>
				<td>
				 	<input type="input" name="arquivo" placeholder="hello.c" required/>
					<input type="submit" value="Enviar">
				</td>
			</form>
		</tr>
	</table>

	<br>
	<table>
		<tr>
			<th colspan=6> Meus arquivos </th>
		</tr>
		<tr>
			<th> # </th>
			<th> Arquivo </th>
			<th> Data modificação </th>
			<th colspan="3"> Ação </th>
		</tr>
		<% for(var i=0; i < data.length; i++) { %>
			<tr>
			  <td> <%= i+1 %> </td>
			  <td> <%= data[i].nome %> </td>
			  <td> <%= data[i].modificado %> </td>
			  <td> <a href="home/arquivo/<%= data[i].id %>"> abrir </a> </td>
			  <td> <a href="home/download/<%= data[i].id %>" target="_blank"> download </a> </td>
			  <td> <a href="home/deletar/<%= data[i].id %>"> deletar </a> </td>
			</tr>
		 <% } %>
	</table>
</body>
</html>